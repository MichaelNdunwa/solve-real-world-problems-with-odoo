<odoo>
    <template id="report_finance_entry_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Finance Entries for <t t-esc="user.name"/></h2>
                    <table class="table table-sm table-bordered mt-3">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="entry">
                                <tr>
                                    <td><t t-esc="entry.date"/></td>
                                    <td><t t-esc="entry.type.title()"/></td>
                                    <td><t t-esc="entry.description"/></td>
                                    <td><t t-esc="entry.amount"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <report
        id="action_report_finance_entries"
        string="Print Finance Entries"
        model="finance.entry"
        report_type="qweb-pdf"
        name="daily_finance_tracker.report_finance_entry_template"
        file="finance.entry"
        print_report_name="'Finance Entries - %s' % (object.user_id.name)"
    />

</odoo>

<odoo>
    <data>
        <record id="view_import_wizard_form" model="ir.ui.view">
            <field name="name">finance.entry.import.wizard.form</field>
            <field name="model">finance.entry.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Upload Past Records" enctype="multipart/form-data">
                    <group>
                        <field name="upload_file" filename="filename"/>
                        <field name="available_sheets" 
                               invisible="available_sheets == False"
                               readonly="1"/>
                        <field name="sheet_name" 
                               placeholder="Enter sheet name"
                               required="upload_file != False"/>
                    </group>
                    <div class="alert alert-info" role="alert" invisible="available_sheets == False">
                        <strong>Instructions:</strong>
                        <ul>
                            <li>Upload your Excel file first</li>
                            <li>Available sheets will be displayed above</li>
                            <li>Enter the exact sheet name you want to import</li>
                            <li>Expected columns: Date, Type, Description, Amount</li>
                        </ul>
                    </div>
                    <footer>
                        <button string="Import" 
                                type="object" 
                                name="action_import" 
                                class="btn-primary"
                                invisible="available_sheets == False"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_import_wizard" model="ir.actions.act_window">
            <field name="name">Upload Past Records</field>
            <field name="res_model">finance.entry.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <menuitem id="menu_finance_import"
                    name="Upload Excel" 
                    parent="menu_finance_root" 
                    action="action_import_wizard" 
                    sequence="20"/>
    </data>
</odoo>